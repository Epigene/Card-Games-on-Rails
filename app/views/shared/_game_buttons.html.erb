<div style="float: left; width: auto;">
  <div class="well">
    <center>
      <% unless @game.is_full? %>
        <%= game_button("Fill") %>
      <% else %>
        <% if @game.new_round_time? %>
          <%= button_to "New Round", game_new_round_path(@game), {:remote => true, :form_class => "game-button", :class => "button"} %>
        <% end %>
        <% if @game.passing_time? %>
          <%= game_button("Fill Passing Sets") %>
          <% if @game.ready_to_pass? %>
            <%= game_button("Pass Cards") %>
          <% end %>
        <% end%>
        <% if @game.new_trick_time? %>
          <%= button_to "New Trick", game_new_trick_path(@game), {:remote => true, :form_class => "game-button", :class => "button"} %>
          <%= button_to "Play All But One Trick", play_all_but_one_trick_game_path(@game) %>
        <% end %>
        <% if @game.mid_trick_time? %>
          <%= button_to "Play One Card", game_play_one_card_path(@game), {:remote => true, :form_class => "game-button", :class => "button"} %>
        <% end %>
      <% end %>
    </center>
  </div>
</div>