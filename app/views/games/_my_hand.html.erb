<% if @hand.any? %>
  <div class="span4">
    <h3>Your Hand:</h3>
    <div class="mytable">
      <table class="table table-striped">
        <tbody>
          <% @hand.each do |card| %>
            <tr>
              <td>
                <% if @time_to_pass %>
                  <%= button_to card.in_english, choose_card_to_pass_game_path(@game, :card => card), :remote => false, :form_class => "choose-to-pass", :class => "button"%>                  
                <% elsif @my_turn && card.is_valid?(@lead_suit) %>
                  <%= button_to card.in_english, play_one_card_game_path(@game, :card => card), :remote => true, :form_class => "play-card", :class => "button"%>
                <% else %>
                  <%= card.in_english %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>